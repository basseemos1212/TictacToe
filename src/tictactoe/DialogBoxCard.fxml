<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<DialogPane fx:id="parent" stylesheets="@../css/dialogboxcard.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.DialogBoxCardController">
   <header>
      <VBox alignment="CENTER" prefHeight="310.0" prefWidth="500.0" spacing="30.0">
         <children>
            <Label fx:id="dialogHeaderLabel1" ellipsisString="" text="Server is Offline" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="dialoBoxMsg1" ellipsisString="" text="Can't connect to the server," textAlignment="CENTER" />
            <Label fx:id="dialoBoxMsg2" alignment="CENTER_RIGHT" ellipsisString="" text="please try again later." textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS" />
            <ImageView fx:id="dialogBoxImg1" fitHeight="100.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/Cloud-off.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </header>
</DialogPane>
