<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<DialogPane fx:id="parent" expanded="true" stylesheets="@../css/waitingforresponse.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.WaitingForResponseController">
   <content>
      <VBox alignment="CENTER" prefHeight="160.0" prefWidth="450.0" spacing="15.0">
         <children>
            <Label fx:id="dialoBoxMsg1" ellipsisString="" style="-fx-font-size: 20;" text="Waiting for the other player to respond" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="60.0" />
               </VBox.margin></Label>
            <ImageView fx:id="dialogBoxImg1" fitHeight="100.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/wait.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </content>
   <padding>
      <Insets bottom="-30.0" top="10.0" />
   </padding>
</DialogPane>
